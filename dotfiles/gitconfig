; vim: set ft=gitconfig:

[alias]
	grep-sed = !sh -c 'git grep -l \"$1\" | xargs sed -i \"s/$1/$2/g\"' -
	extract = filter-branch --prune-empty --subdirectory-filter
	praise = blame
	rbc = rebase --continue
	ci = commit --verbose
	dc = diff --cached
	rb = rebase
	rba = rebase --abort
	st = status
	co = checkout
	br = branch
	ctags = !.git/hooks/ctags
	root = rev-parse --show-toplevel

[apply]
	whitespace = nowarn

[color]
	diff = auto
	ui = auto
	grep = auto
	branch = auto
	status = auto

[commit]
	template = ~/.gitcommit

[core]
	excludesfile = ~/.gitignore

[difftool]
	prompt = false

[grep]
	patternType = perl

[init]
	templatedir = ~/.git_template

[merge]
	conflictstyle = diff3

[mergetool]
	keepBackup = false

[pull]
	ff = only

[push]
	default = simple
	
[rebase]
	autoSquash = true

[user]
	email = nicknovitski@gmail.com
	name = Nick Novitski
